<h2 id='title'>
  ember-toastr
</h2>

<button type='button' onclick={{action 'success' 'Saved!'}}>
  Success
</button>
<button type='button' onclick={{action 'info' 'New notification!'}}>
  Info
</button>
<button type='button' onclick={{action 'warning' 'Do not do this!'}}>
  Warning
</button>
<button type='button' onclick={{action 'error' 'Oh oh!'}}>
  Error
</button>

<hr />

<button type='button' onclick={{action 'clearAll'}}>
  Clear All
</button>
<button type='button' onclick={{action 'removeAll'}}>
  Remove All
</button>

<hr />

<h3>
  All Toasts
</h3>
<ol>
  {{#each toast.toasts key='@index' as |item|}}
    <li>
      Item
      <button type='button' onclick={{action 'clearItem' item}}>
        clear
      </button>

      <button type='button' onclick={{action 'removeItem' item}}>
        remove
      </button>
    </li>
  {{else}}
    <li>
      No toasts
    </li>
  {{/each}}
</ol>

{{outlet}}